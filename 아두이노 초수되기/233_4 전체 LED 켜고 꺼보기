const unsigned int led[8] = {2,3,4,5,6,7,8,9};

void setup() {
  // put your setup code here, to run once:

  for(int x =0;x<=7;x++){
    pinMode(led[x],OUTPUT);
  }

}

void loop() {
  // put your main code here, to run repeatedly:


  for(int x=0;x<=7;x++){
    digitalWrite(led[x],HIGH);
  }

  delay(500);

  for(int x= 0;x<=7;x++){
    digitalWrite(led[x],LOW);
  }

  delay(500);


  
}
